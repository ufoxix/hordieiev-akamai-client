<?xml version="1.0" ?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
	<system>
		<section id="config_akamai" showInDefault="1" showInStore="1" showInWebsite="1" sortOrder="2011" translate="label">
			<label>Akamai Configuration</label>
			<tab>service</tab>
			<resource>Hordieiev_AkamaiClient::config_akamai</resource>
			<group id="credentials" translate="label comment" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
				<label>Credentials and Setup</label>
				<field id="feature_flag_setting" translate="label" type="select" sortOrder="0" showInDefault="1" showInWebsite="1" showInStore="1">
					<label>Enable / Disable Akamai Client Feature</label>
					<comment>
						<![CDATA[
							Feature flag enable/disable button.
						]]>
					</comment>
					<source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
				</field>
				<field id="host_name" translate="label comment" type="text" sortOrder="2" showInDefault="1" showInWebsite="1" showInStore="1">
					<label>Hostname</label>
					<comment>
						<![CDATA[
                            You can find your Client Token and API keys in the <a href="https://control.akamai.com/" target="_blank">Akamai Control Center</a>.
                        ]]>
					</comment>
					<depends>
						<field id="config_akamai/credentials/feature_flag_setting">1</field>
					</depends>
				</field>
				<field id="client_token" translate="label comment" type="text" sortOrder="3" showInDefault="1" showInWebsite="1" showInStore="1">
					<label>Client Token</label>
					<comment>
						<![CDATA[
                            You can find your Client Token and API keys in the <a href="https://control.akamai.com/" target="_blank">Akamai Control Center</a>.
                        ]]>
					</comment>
					<depends>
						<field id="config_akamai/credentials/feature_flag_setting">1</field>
					</depends>
				</field>
				<field id="client_secret" translate="label comment" type="obscure" sortOrder="4" showInDefault="1" showInWebsite="1" showInStore="1">
					<label>Client Secret Key</label>
					<backend_model>Magento\Config\Model\Config\Backend\Encrypted</backend_model>
					<comment>
						<![CDATA[
                            You can find your Client Token and API keys in the <a href="https://control.akamai.com/" target="_blank">Akamai Control Center</a>.
                        ]]>
					</comment>
					<depends>
						<field id="config_akamai/credentials/feature_flag_setting">1</field>
					</depends>
				</field>
				<field id="access_token" translate="label comment" type="text" sortOrder="5" showInDefault="1" showInWebsite="1" showInStore="1">
					<label>Access Token</label>
					<comment>
						<![CDATA[
                            You can find your Client Token and API keys in the <a href="https://control.akamai.com/" target="_blank">Akamai Control Center</a>.
                        ]]>
					</comment>
					<depends>
						<field id="config_akamai/credentials/feature_flag_setting">1</field>
					</depends>
				</field>
				<field id="debug" translate="label comment" type="select" sortOrder="6" showInDefault="1" showInWebsite="1" showInStore="1">
					<label>Enable Logging</label>
					<source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
					<comment>
						<![CDATA[
                           Logging generates a significant amount of data and can affect performance of the extension. Use it only for debugging.
                        ]]>
					</comment>
					<depends>
						<field id="config_akamai/credentials/feature_flag_setting">1</field>
					</depends>
				</field>
				<field id="network_mode" translate="label comment" type="select" sortOrder="7" showInDefault="1" showInWebsite="1" showInStore="1">
					<label>Network Environment Mode</label>
					<source_model>Hordieiev\AkamaiClient\Model\Config\Source\NetworkMode</source_model>
					<comment>
						<![CDATA[
                           The network on which you want to invalidate or delete content, either staging or the default production network. If omitting this optional parameter, also omit any trailing slash from the shortened URL.
                        ]]>
					</comment>
					<depends>
						<field id="config_akamai/credentials/feature_flag_setting">1</field>
					</depends>
				</field>
			</group>
		</section>
	</system>
</config>
